<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Beauty Salon", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item dropdown">@Html.ActionLink("Dodatni Tretmani", "Index", "DodatniTretmani", null, new { @class = "nav-link" , @id="dropdown" })
                        <div class="dropdown-menu">
                            @Html.ActionLink("Dodatni Tretmani Ocjene", "Index", "DodatniTretmaniOcjene", null, new { @class = "dropdown-item" })
                        </div>
                    </li>
                    <li class="nav-item">@Html.ActionLink("Frizeri", "Index", "Frizeri", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Klijenti", "Index", "Klijenti", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Klijenti Takmičenja", "Index", "KlijentiTakmicenja", null,  new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Nagrade", "Index", "Nagrade", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Skladište", "Index", "Skladiste", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Takmičenja", "Index", "Takmicenja", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Termini", "Index", "Termini", null, new { @class = "nav-link" })</li>
                    <li class="nav-item dropdown">@Html.ActionLink("Usluge", "Index", "Usluge", null, new { @class = "nav-link" })
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            @Html.ActionLink("Usluge Ocjene", "Index", "UslugeOcjene", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("Vrsta Usluga", "Index", "VrsteUsluga", null, new { @class = "dropdown-item" })
                            
                        </div>
                    </li>
                    <li class="nav-item"></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/custom.js")
    @RenderSection("scripts", required: false)
</body>
</html>
