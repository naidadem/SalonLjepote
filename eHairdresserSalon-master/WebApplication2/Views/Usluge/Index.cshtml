@model IEnumerable<WebApplication.Models.Usluge>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Dodavanje ", "Create" , null, new { @class="create-button"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NazivUsluge)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TrajanjeMinute)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CijenaUsluge)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VrsteUsluga.Naziv)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NazivUsluge)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TrajanjeMinute)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CijenaUsluge)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VrsteUsluga.Naziv)
        </td>
        <td>
            @Html.ActionLink("Izmjeni", "Edit", new { id=item.UslugaID }, new { @class = "edit-button" }) 
            @Html.ActionLink("Vidi više", "Details", new { id=item.UslugaID }, new { @class = "details-button" }) 
            @Html.ActionLink("Obriši", "Delete", new { id=item.UslugaID }, new { @class = "delete-button" })
        </td>
    </tr>
}

</table>
